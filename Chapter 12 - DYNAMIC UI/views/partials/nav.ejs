<header>
  <nav class="bg-orange-600 text-white px-4 py-4 flex justify-between items-center shadow-md">
    <div class="text-4xl font-bold">Airbnb</div>
    <div class="flex space-x-4">
      <a
        href="<%= user ? '/logout' : '/login' %>"
        class="px-6 py-3 rounded-lg shadow-sm transition duration-300 ease-in-out 
          <%= activeTab === 'login' || activeTab === 'logout' ? 'bg-white text-orange-600 border-2 border-white' : 'bg-transparent text-white border-2 border-transparent hover:border-white hover:text-white' %>
        focus:outline-none focus:ring-2 focus:ring-orange-300"
      >
        <%= user === 'logout' ? 'Logout' : 'Login' %>
      </a>
      <a
        href="/host/add-home"
        class="px-6 py-3 rounded-lg shadow-sm transition duration-300 ease-in-out
          <%= activeTab === 'add-home' ? 'bg-white text-orange-600 border-2 border-white' : 'bg-transparent text-white border-2 border-transparent hover:border-white hover:text-white' %>
        focus:outline-none focus:ring-2 focus:ring-orange-300"
      >
        Add Home
      </a>
    </div>
  </nav>
</header>
