<form
  action="/bookings/delete/<%= home._id %>"
  method="POST"
  class="flex items-center space-x-4 group"
>
  <button
    type="submit"
    class="relative bg-gradient-to-r from-red-500 via-red-600 to-red-500 hover:from-red-600 hover:via-red-700 hover:to-red-600 text-white px-6 py-3 rounded-xl font-semibold w-full transition-all duration-300 transform hover:scale-105 hover:shadow-2xl hover:shadow-red-500/25 backdrop-blur-sm border border-white/10 overflow-hidden group-hover:animate-pulse"
  >
    <!-- Animated background gradient -->
    <div class="absolute inset-0 bg-gradient-to-r from-red-400/20 to-red-600/20 opacity-0 group-hover:opacity-100 transition-opacity duration-500 animate-pulse"></div>
    
    <!-- Floating particles effect -->
    <div class="absolute top-1 right-2 w-1 h-1 bg-white/60 rounded-full animate-ping"></div>
    <div class="absolute bottom-1 left-3 w-0.5 h-0.5 bg-white/40 rounded-full animate-bounce delay-300"></div>
    
    <!-- Button content -->
    <span class="relative z-10 flex items-center justify-center space-x-2">
      <span class="bg-gradient-to-r from-white to-red-100 bg-clip-text text-sm text-transparent font-bold md:text-xl">Remove</span>
      <span class="text-red-300 animate-pulse text-lg hover:scale-125 transition-transform duration-300">‚ùå</span>
    </span>
    
    <!-- Hover glow effect -->
    <div class="absolute inset-0 rounded-xl bg-gradient-to-r from-red-400/0 via-red-500/0 to-red-400/0 group-hover:from-red-400/20 group-hover:via-red-500/30 group-hover:to-red-400/20 transition-all duration-500 blur-xl"></div>
  </button>
  <input type="hidden" name="homeId" value="<%= home._id %>" />
</form>