<%- include('../partials/head') %>
</head>
<body class="min-h-screen bg-gradient-to-br from-gray-900 via-purple-900 to-gray-800 font-sans relative overflow-x-hidden">
  <!-- Animated background elements -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute top-1/4 left-1/4 w-32 h-32 bg-gradient-to-r from-orange-500/20 to-pink-500/20 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute top-3/4 right-1/4 w-24 h-24 bg-gradient-to-r from-pink-500/20 to-orange-500/20 rounded-full blur-2xl animate-pulse delay-1000"></div>
    <div class="absolute bottom-1/4 left-1/3 w-20 h-20 bg-gradient-to-r from-orange-400/15 to-pink-400/15 rounded-full blur-xl animate-pulse delay-2000"></div>
    
    <!-- Floating particles -->
    <div class="absolute top-10 left-10 w-1 h-1 bg-orange-400 rounded-full animate-ping"></div>
    <div class="absolute top-20 right-20 w-0.5 h-0.5 bg-pink-500 rounded-full animate-bounce"></div>
    <div class="absolute bottom-20 left-20 w-1.5 h-1.5 bg-orange-300 rounded-full animate-pulse"></div>
  </div>

  <%- include('../partials/nav') %>

  <main class="flex justify-center pt-8 pb-12 px-4 relative z-10">
    <div class="bg-white/10 backdrop-blur-xl border border-white/20 shadow-2xl rounded-2xl p-8 w-full max-w-md relative overflow-hidden group">
      <!-- Glass card glow effects -->
      <div class="absolute inset-0 bg-gradient-to-br from-white/5 via-transparent to-white/5 rounded-2xl"></div>
      <div class="absolute -top-20 -right-20 w-40 h-40 bg-gradient-to-r from-orange-500/10 to-pink-500/10 rounded-full blur-3xl group-hover:scale-110 transition-transform duration-1000"></div>
      <div class="absolute -bottom-20 -left-20 w-32 h-32 bg-gradient-to-r from-pink-500/10 to-orange-500/10 rounded-full blur-2xl group-hover:scale-110 transition-transform duration-1000"></div>
      
      <form action="/host/<%= editing ? "edit-home" : "add-home" %>" method="POST" class="space-y-6 relative z-10">
        <div class="text-center mb-8">
          <div class="inline-block p-3 bg-gradient-to-r from-orange-500/20 to-pink-500/20 rounded-full mb-4 backdrop-blur-sm border border-white/10">
            <svg class="w-8 h-8 text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
            </svg>
          </div>
          <label for="houseName" class="block text-3xl font-bold bg-gradient-to-r from-orange-400 via-pink-500 to-orange-500 bg-clip-text text-transparent">
            <%=editing ? "Edit" : "List"%> Your Home
          </label>
          <p class="text-gray-300 mt-2">Share your space with travelers worldwide</p>
        </div>

        <input type="hidden" name="id" value="<%= editing ? home._id : ""%>">
        
        <!-- Owner Name Input -->
        <div class="relative group">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <svg class="h-5 w-5 text-orange-400 group-focus-within:text-pink-400 transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
          </div>
          <input
            type="text"
            id="ownerName"
            name="ownerName"
            value="<%= editing ? home.ownerName : ''  %>"
            placeholder="Enter your name"
            class="block w-full pl-10 pr-4 py-3 bg-white/10 backdrop-blur-sm border border-white/20 rounded-xl text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-orange-400 focus:border-transparent hover:bg-white/15 transition-all duration-300"
            required
          />
        </div>

        <!-- House Name Input -->
        <div class="relative group">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <svg class="h-5 w-5 text-orange-400 group-focus-within:text-pink-400 transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
            </svg>
          </div>
          <input
            type="text"
            id="houseName"
            name="houseName"
            value="<%= editing ? home.houseName : ''  %>"
            placeholder="Enter the name of your house"
            class="block w-full pl-10 pr-4 py-3 bg-white/10 backdrop-blur-sm border border-white/20 rounded-xl text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-orange-400 focus:border-transparent hover:bg-white/15 transition-all duration-300"
            required
          />
        </div>

        <!-- Price Input -->
        <div class="relative group">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <svg class="h-5 w-5 text-orange-400 group-focus-within:text-pink-400 transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
            </svg>
          </div>
          <input
            type="text"
            id="pricePerNight"
            name="pricePerNight"
            value="<%= editing ? home.pricePerNight : ''  %>"
            placeholder="Enter the price per night"
            class="block w-full pl-10 pr-4 py-3 bg-white/10 backdrop-blur-sm border border-white/20 rounded-xl text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-orange-400 focus:border-transparent hover:bg-white/15 transition-all duration-300"
            required
          />
        </div>

        <!-- Location Select -->
        <div class="relative group">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <svg class="h-5 w-5 text-orange-400 group-focus-within:text-pink-400 transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
          </div>
          <select 
            name="location" 
            id="location" 
            class="block w-full pl-10 pr-8 py-3 bg-white/10 backdrop-blur-sm border border-white/20 rounded-xl text-white focus:outline-none focus:ring-2 focus:ring-orange-400 focus:border-transparent hover:bg-white/15 transition-all duration-300 appearance-none cursor-pointer" 
            required
          >
            <option value="" <%= !editing ? 'selected' : '' %> class="bg-gray-800 text-white">Select Location</option>
            <option value="Jaipur" <%= editing && home.location === 'Jaipur' ? 'selected' : '' %> class="bg-gray-800 text-white">Jaipur</option>
            <option value="Goa" <%= editing && home.location === 'Goa' ? 'selected' : '' %> class="bg-gray-800 text-white">Goa</option>
            <option value="Himalayas" <%= editing && home.location === 'Himalayas' ? 'selected' : '' %> class="bg-gray-800 text-white">Himalayas</option>
          </select>
          <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
            <svg class="h-5 w-5 text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </div>
        </div>

        <!-- Rating Input -->
        <div class="relative group">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <svg class="h-5 w-5 text-orange-400 group-focus-within:text-pink-400 transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>
            </svg>
          </div>
          <input
            type="number"
            id="rating"
            name="rating"
            value="<%= editing ? home.rating : ''  %>"
            placeholder="Enter the rating (1-5)"
            class="block w-full pl-10 pr-4 py-3 bg-white/10 backdrop-blur-sm border border-white/20 rounded-xl text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-orange-400 focus:border-transparent hover:bg-white/15 transition-all duration-300"
            min="1"
            max="5"
            step="0.1"
            required
          />
        </div>

        <!-- Image URL Input -->
        <div class="relative group">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <svg class="h-5 w-5 text-orange-400 group-focus-within:text-pink-400 transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
          </div>
          <input
            type="text"
            id="imgUrl"
            name="imgUrl"
            value="<%= editing ? home.imgUrl : ''  %>"
            placeholder="Enter the image URL"
            class="block w-full pl-10 pr-4 py-3 bg-white/10 backdrop-blur-sm border border-white/20 rounded-xl text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-orange-400 focus:border-transparent hover:bg-white/15 transition-all duration-300"
            required
          />
        </div>

        <!-- Description Textarea -->
        <div class="relative group">
          <div class="absolute top-3 left-3 pointer-events-none">
            <svg class="h-5 w-5 text-orange-400 group-focus-within:text-pink-400 transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7"/>
            </svg>
          </div>
          <textarea
            id="description"
            name="description"
            placeholder="Enter a description"
            rows="4"
            class="block w-full pl-10 pr-4 py-3 bg-white/10 backdrop-blur-sm border border-white/20 rounded-xl text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-orange-400 focus:border-transparent hover:bg-white/15 transition-all duration-300 resize-none"
            required
          ><%= editing ? home.description : ''  %></textarea>
        </div>

        <!-- Submit Button -->
        <div class="pt-4">
          <button
            type="submit"
            class="w-full py-4 bg-gradient-to-r from-orange-500 via-pink-500 to-orange-600 hover:from-orange-600 hover:via-pink-600 hover:to-orange-700 text-white font-bold rounded-xl transition-all duration-300 transform hover:scale-105 hover:shadow-2xl hover:shadow-orange-500/25 backdrop-blur-sm border border-white/10 relative overflow-hidden group"
          >
            <!-- Button shimmer effect -->
            <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/10 to-transparent -skew-x-12 -translate-x-full group-hover:translate-x-full transition-transform duration-1000 ease-out"></div>
            
            <!-- Button content -->
            <span class="relative z-10 flex items-center justify-center space-x-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
              </svg>
              <span><%= editing ? 'Update Home' : 'List Your Home' %></span>
            </span>
            
            <!-- Button glow -->
            <div class="absolute inset-0 rounded-xl bg-gradient-to-r from-orange-400/0 via-pink-400/0 to-orange-400/0 group-hover:from-orange-400/20 group-hover:via-pink-400/30 group-hover:to-orange-400/20 transition-all duration-500 blur-xl"></div>
          </button>
        </div>
      </form>
    </div>
  </main>
  
  <% include('../partials/footer') %>
</body>
</html>